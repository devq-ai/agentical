# S3 Bucket for application data
resource "aws_s3_bucket" "agentical_data" {
  bucket        = "agentical-data-${var.environment}-${random_string.bucket_suffix.result}"
  force_destroy = var.environment != "production"
  
  tags = local.common_tags
}

resource "aws_s3_bucket_versioning" "agentical_data" {
  bucket = aws_s3_bucket.agentical_data.id
  versioning_configuration {
    status = "Enabled"
  }
}

resource "aws_s3_bucket_encryption" "agentical_data" {
  bucket = aws_s3_bucket.agentical_data.id
  
  server_side_encryption_configuration {
    rule {
      apply_server_side_encryption_by_default {
        kms_master_key_id = aws_kms_key.eks.arn
        sse_algorithm     = "aws:kms"
      }
    }
  }
}

resource "aws_s3_bucket_public_access_block" "agentical_data" {
  bucket = aws_s3_bucket.agentical_data.id
  
  block_public_acls       = true
  block_public_policy     = true
  ignore_public_acls      = true
  restrict_public_buckets = true
}

